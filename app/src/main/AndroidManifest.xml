<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.alcoholwolf">



    <application
        android:name="com.pkqup.commonlibrary.abase.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="WOLF_CHANNEL"
            android:value="${WOLF_CHANNEL}" />


        <activity
            android:name="com.android.alcoholwolf.abase.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Flash.Theme"
            android:windowSoftInputMode="adjustUnspecified|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.android.alcoholwolf.abase.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />

    </application>

</manifest>