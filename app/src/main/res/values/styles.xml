<resources>
    <style name="roomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>


    <style name="auctionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/line_vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:background">@color/bg_white</item>
    </style>

    <style name="auctionLabel">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="auctionValue">
        <item name="android:layout_weight">3.5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="order_left_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="order_left_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="add_goods_label">
        <item name="android:layout_width">82dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="add_goods_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/t_black</item>
        <item name="android:textColorHint">@color/t_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:hint">请选择</item>
    </style>
</resources>
