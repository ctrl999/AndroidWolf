<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <com.lzy.widget.HeaderViewPager
        android:id="@+id/scrollableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:hvp_topOffset="44dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/imgShow"
                    android:layout_width="28dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:src="@mipmap/gray_down" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgHead"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@color/bg_red" />

                <TextView
                    android:id="@+id/tvShopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_toLeftOf="@id/imgShow"
                    android:layout_toRightOf="@id/imgHead"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="店铺名"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_mid" />

                <TextView
                    android:id="@+id/tvShopTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvShopName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toLeftOf="@id/imgShow"
                    android:layout_toRightOf="@id/imgHead"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="店铺名"
                    android:textColor="@color/t_gray"
                    android:textSize="@dimen/sp_small" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/rlShopDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvPhoneStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="联系方式："
                    android:textColor="@color/t_gray"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:id="@+id/tvShopPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvPhoneStr"
                    android:text="18588889999"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:id="@+id/tvDescStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPhoneStr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="卖家简介："
                    android:textColor="@color/t_gray"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvPhoneStr"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/tvDescStr"
                    android:text="卖家简介卖家简介卖家简介卖家简介卖家简介卖家简介卖家简介卖家简介卖家简介卖家简介"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_small" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_all"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="综合"
                    android:textColor="@color/t_gray_select"
                    android:textSize="@dimen/sp_small" />

                <TextView
                    android:id="@+id/tv_new"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="新品"
                    android:textColor="@color/t_gray_select"
                    android:textSize="@dimen/sp_small" />

                <RelativeLayout
                    android:id="@+id/sortPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="2dp"
                        android:drawableRight="@mipmap/goods_price_sort"
                        android:gravity="center"
                        android:text="价格"
                        android:textColor="@color/t_gray_select"
                        android:textSize="@dimen/sp_small" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_class"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="分类"
                    android:textColor="@color/t_gray_select"
                    android:textSize="@dimen/sp_small" />

                <RelativeLayout
                    android:id="@+id/sortFilter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:drawablePadding="2dp"
                        android:drawableRight="@mipmap/goods_filter"
                        android:gravity="center"
                        android:text="筛选"
                        android:textColor="@color/t_gray_select"
                        android:textSize="@dimen/sp_small" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />
        </LinearLayout>

        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.pkqup.commonlibrary.view.MyHeaderRecycleView
                android:id="@+id/recycle_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:id="@+id/right_view"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@color/bg_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="DrawerLayout"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_mid" />

            </LinearLayout>

        </android.support.v4.widget.DrawerLayout>

    </com.lzy.widget.HeaderViewPager>
</LinearLayout>