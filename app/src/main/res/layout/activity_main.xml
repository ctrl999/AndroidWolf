<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="显示加载" />

    <TextView
        android:id="@+id/tv_fragment"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="显示fragment" />

    <!--圆形图片  设置android:scaleType="centerCrop"
                    app:sriv_aoval="true"-->
    <com.pkqup.commonlibrary.view.RoundedImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:sriv_aoval="true"
        app:sriv_border_color="#008fea"
        app:sriv_border_width="2dp" />

    <com.pkqup.commonlibrary.view.RoundedImageView
        android:id="@+id/image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:sriv_border_color="#008fea"
        app:sriv_border_width="2dp"
        app:sriv_left_bottom_corner_radius="48dip"
        app:sriv_left_top_corner_radius="16dip"
        app:sriv_right_bottom_corner_radius="16dip"
        app:sriv_right_top_corner_radius="0dip" />

    <RelativeLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_show"
        android:visibility="gone">


    </RelativeLayout>
</LinearLayout>
