<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlBanner"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/t_red"
                android:textSize="@dimen/sp_big"
                tools:text="￥5000.00" />

            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="@color/t_black"
                android:textSize="14sp"
                tools:text="法国红酒法国红酒法国红酒法国红酒法国红酒法国红酒" />

            <TextView
                android:id="@+id/tvGoodsNameSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:textColor="@color/t_gray"
                android:textSize="@dimen/sp_small"
                tools:text="副标题" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_gray"
                    android:minHeight="15dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:textColor="@color/t_black"
                    android:textSize="11sp"
                    tools:text="法国" />

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@color/bg_gray"
                    android:minHeight="15dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="1dp"
                    android:textColor="@color/t_black"
                    android:textSize="11sp"
                    android:visibility="gone"
                    tools:text="92年" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlAuctionTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvTimeStr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="距离结束："
                    android:textColor="@color/t_red"
                    android:textSize="12sp" />

                <com.pkqup.commonlibrary.view.countdownview.CountdownView
                    android:id="@+id/countdownView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tvTimeStr"
                    app:isShowDay="true"
                    app:isShowHour="true"
                    app:isShowMillisecond="false"
                    app:isShowMinute="true"
                    app:isShowSecond="true"
                    app:isTimeTextBold="true"
                    app:suffixDay="天"
                    app:suffixGravity="bottom"
                    app:suffixHour="时"
                    app:suffixMinute="分"
                    app:suffixSecond="秒"
                    app:suffixTextColor="@color/t_gray"
                    app:suffixTextSize="12sp"
                    app:timeTextColor="@color/t_red"
                    app:timeTextSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llAuctionMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="竞拍方式："
                    android:textColor="@color/t_red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明拍"
                    android:textColor="@color/t_red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPriceList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@color/bg_red"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="查看竞拍出价"
                    android:textColor="@color/t_white"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="说明:"
                    android:textColor="@color/t_gray"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/t_gray"
                    android:textSize="11sp"
                    tools:text="支持线下交易/不支持7天无理由退货" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgStore"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/imgStore"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_small"
                    tools:text="店铺名" />

                <ImageView
                    android:id="@+id/ivStoreLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvStoreName"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvStoreName"
                    android:src="@mipmap/store_common" />

                <TextView
                    android:id="@+id/tvStoreDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvStoreName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/imgStore"
                    android:textColor="@color/t_grey"
                    android:textSize="11sp"
                    tools:text="简介" />

                <TextView
                    android:id="@+id/tvLookAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/black_right_arrow_two"
                    android:text="进店"
                    android:textColor="@color/t_black"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:id="@+id/rlEvaluate"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tvEvaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="商家评价"
                    android:textColor="@color/t_black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/black_right_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/lineEvaluate"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_gray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvEvaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray" />

            <LinearLayout
                android:id="@+id/llAuctionInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/auctionInfoTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="拍品详情"
                    android:textColor="@color/t_black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/bg_gray"
                    android:divider="@drawable/line_vertical"
                    android:orientation="vertical"
                    android:padding="1dp"
                    android:showDividers="middle">

                    <LinearLayout style="@style/auctionLayout">

                        <TextView
                            style="@style/auctionLabel"
                            android:text="商品名：" />

                        <TextView
                            android:id="@+id/tvAuName"
                            style="@style/auctionValue" />
                    </LinearLayout>

                    <LinearLayout style="@style/auctionLayout">

                        <TextView
                            style="@style/auctionLabel"
                            android:text="年份：" />

                        <TextView
                            android:id="@+id/tvAuYear"
                            style="@style/auctionValue" />
                    </LinearLayout>

                    <LinearLayout style="@style/auctionLayout">

                        <TextView
                            style="@style/auctionLabel"
                            android:text="酒庄：" />

                        <TextView
                            android:id="@+id/tvAuChateau"
                            style="@style/auctionValue" />
                    </LinearLayout>

                    <LinearLayout style="@style/auctionLayout">

                        <TextView
                            style="@style/auctionLabel"
                            android:text="容量：" />

                        <TextView
                            android:id="@+id/tvAuVolume"
                            style="@style/auctionValue" />
                    </LinearLayout>

                    <LinearLayout style="@style/auctionLayout">

                        <TextView
                            style="@style/auctionLabel"
                            android:text="原料：" />

                        <TextView
                            android:id="@+id/tvAuMaterial"
                            style="@style/auctionValue" />
                    </LinearLayout>

                    <LinearLayout style="@style/auctionLayout">

                        <TextView
                            style="@style/auctionLabel"
                            android:text="储存条件：" />

                        <TextView
                            android:id="@+id/tvAuStorage"
                            style="@style/auctionValue" />
                    </LinearLayout>

                    <LinearLayout style="@style/auctionLayout">

                        <TextView
                            style="@style/auctionLabel"
                            android:text="商品来源：" />

                        <TextView
                            android:id="@+id/tvAuResources"
                            style="@style/auctionValue" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray" />

            <RelativeLayout
                android:id="@+id/rlAuctionExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAuctionExplainTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="竞拍说明"
                    android:textColor="@color/t_black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvMoreExplain"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingRight="32dp"
                    android:text="更多说明"
                    android:textColor="@color/t_grey"
                    android:textSize="13sp" />

                <View
                    android:id="@+id/lineAuctionExplain"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tvAuctionExplainTitle"
                    android:background="@color/bg_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/lineAuctionExplain"
                    android:background="@color/bg_white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableTop="@mipmap/order_pay"
                        android:gravity="center"
                        android:text="参与出价"
                        android:textColor="@color/t_black"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="30dp"
                        android:src="@mipmap/next_step" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableTop="@mipmap/order_pay"
                        android:gravity="center"
                        android:text="价高者得"
                        android:textColor="@color/t_black"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="30dp"
                        android:src="@mipmap/next_step" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableTop="@mipmap/order_pay"
                        android:gravity="center"
                        android:text="支付贷款"
                        android:textColor="@color/t_black"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="30dp"
                        android:src="@mipmap/next_step" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:drawablePadding="10dp"
                        android:drawableTop="@mipmap/order_pay"
                        android:gravity="center"
                        android:text="获得拍品"
                        android:textColor="@color/t_black"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/bg_gray">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="猜你喜欢"
                    android:textColor="@color/t_black"
                    android:textSize="@dimen/sp_small" />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_gray" />

        <TextView
            android:id="@+id/tvAuctionBuy"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/bg_red"
            android:gravity="center"
            android:visibility="gone"
            android:text="立即出价"
            android:textColor="@color/t_white"
            android:textSize="@dimen/sp_mid" />

        <TextView
            android:id="@+id/tvPayMoney"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/tvAuctionBuy"
            android:textColor="@color/t_red"
            android:textSize="@dimen/sp_small"
            tools:text="应付定金:¥500" />


        <TextView
            android:id="@+id/tvBuy"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/bg_red"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="@color/t_white"
            android:textSize="@dimen/sp_mid"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvAddCart"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tvBuy"
            android:background="@color/bg_orange"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/t_white"
            android:textSize="@dimen/sp_mid"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/bg_gray" />


            <ImageView
                android:id="@+id/ivService"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@mipmap/phone_icon" />


            <ImageView
                android:id="@+id/ivCollect"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@mipmap/collect_false" />


            <RelativeLayout
                android:id="@+id/rlCart"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/goods_details_cart" />

                <TextView
                    android:id="@+id/tvCartNum"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignTop="@id/imgCart"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="-5dp"
                    android:layout_toRightOf="@id/imgCart"
                    android:background="@drawable/cart_num_bg"
                    android:gravity="center"
                    android:textColor="@color/t_white"
                    android:textSize="8sp"
                    android:visibility="gone"
                    tools:text="1" />

            </RelativeLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/bg_gray" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>