<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <LinearLayout
        android:id="@+id/llStore"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_round_white_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgStore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@mipmap/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="店铺名称"
                android:drawablePadding="5dp"
                android:layout_marginRight="80dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="15sp"
                android:drawableRight="@mipmap/black_right_arrow_two"
                android:textColor="@color/t_black"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />

    <LinearLayout
        android:id="@+id/llProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_gray" />
    <TextView
        android:id="@+id/tvTotalNum"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical|right"
        android:background="@color/bg_white"/>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            android:background="@drawable/bg_round_white_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_round_white_red_border_15dp"

                android:textSize="15sp"
                android:textColor="@color/t_red"
                android:gravity="center"
                android:text="取消订单" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:minWidth="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_round_white_red_border_15dp"
                android:gravity="center"
                android:text="申请退款"
                android:textSize="15sp"
                android:textColor="@color/t_red" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>