<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <com.pkqup.commonlibrary.view.RoundedImageView
        android:id="@+id/imgPic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:sriv_left_bottom_corner_radius="@dimen/dp_10"
        app:sriv_right_bottom_corner_radius="@dimen/dp_10"
        app:sriv_left_top_corner_radius="@dimen/dp_10"
        app:sriv_right_top_corner_radius="@dimen/dp_10"
        app:sriv_aoval="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvBrandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imgPic"
        android:layout_below="@id/imgPic"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="拉菲"
        android:textColor="@color/t_black"
        android:textSize="@dimen/text_size_12sp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imgPic"
        android:layout_below="@id/tvBrandName"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="法国波尔多葡萄酒"
        android:textColor="@color/t_gray"
        android:textSize="@dimen/text_size_12sp" />
</RelativeLayout>